
@{
  ViewData["Title"] = "Partita";
  int numerodomanda = 1;
  int numeroOpzioni = 2;
  string a = "a";
}

<h1>@ViewData["Title"]</h1>

<h3>Benvenuto @User.Identity.Name</h3>

<form method="post">
  @foreach (var domanda in Model.Domande)
  {
    numeroOpzioni = domanda.Opzioni.Length;
    <div>
      <p>@domanda.Id</p>
      <p>@domanda.TestoDomanda</p>
      @for (int i = 0; i < numeroOpzioni; i++)
      {
        a = numerodomanda + "opzione" + i;
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value=@a name=@a id=@a>
          <label class="form-check-label" for=@a>
            @domanda.Opzioni[i]
          </label>
        </div>
      }
    </div>
    numerodomanda++;
  }
  <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>
