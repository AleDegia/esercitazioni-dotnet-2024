@page
@model ModificaPrezzoModel
@{
    ViewData["Title"] = "Modifica Prezzo";
}

<h1>@ViewData["Title"]</h1>

<form method="post">        <!--setto il method al post-->
    <div class="form-group">
        <label for="prezzo">Prezzo</label>
        <input type="text" class="form-control" name="prezzo" value="@Model.Prodotto.Prezzo">
    </div>
    <div class="form-group">
        <label for="prezzo">Nome</label>
        <input type="text" class="form-control" name="nome" value="@Model.Prodotto.Nome">
    </div>
    <button type="submit" class="btn btn-warning">Modifica</button>
    <a asp-page="Prodotti" class="btn btn-dark">annulla</a>
</form>
